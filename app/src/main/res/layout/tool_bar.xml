<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="nysa.nysa_20.activity.HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/upperBorderImageView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e7e7e7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar2" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="56dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:srcCompat="@drawable/nohome" />

    <ImageButton
        android:id="@+id/accountButton"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/homeButton"
        app:layout_constraintEnd_toStartOf="@+id/chatBotButton"
        app:layout_constraintStart_toEndOf="@+id/homeButton"
        app:layout_constraintTop_toTopOf="@+id/homeButton"
        app:srcCompat="@drawable/noperson" />

    <ImageButton
        android:id="@+id/chatBotButton"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/accountButton"
        app:layout_constraintEnd_toEndOf="@+id/historyButton"
        app:layout_constraintStart_toStartOf="@+id/homeButton"
        app:layout_constraintTop_toTopOf="@+id/accountButton"
        app:srcCompat="@drawable/addtoolbar" />

    <ImageButton
        android:id="@+id/libraryButton"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/accountButton"
        app:layout_constraintEnd_toStartOf="@+id/historyButton"
        app:layout_constraintStart_toEndOf="@+id/chatBotButton"
        app:layout_constraintTop_toTopOf="@+id/accountButton"
        app:srcCompat="@drawable/nomenu" />

    <ImageButton
        android:id="@+id/historyButton"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/chatBotButton"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/libraryButton"
        app:srcCompat="@drawable/nograph" />

</android.support.constraint.ConstraintLayout>